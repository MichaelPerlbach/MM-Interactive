<T3DataStructure>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>Grundeinstellungen</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.uploadtypes>
						<TCEforms>
							<label>für den Upload erlaubte Dateitypen (durch Kommata trennen)</label>
								<config>
									<type>text</type>
									<cols>30</cols>
									<rows>5</rows>
								</config>
						</TCEforms>
					</settings.uploadtypes>
					<settings.shapes>
						<TCEforms>
							<label>Dateitypen für Shape-Dateien (durch Kommata trennen)</label>
							<config>
								<type>text</type>
								<cols>30</cols>
								<rows>5</rows>
							</config>
						</TCEforms>
					</settings.shapes>
					<settings.emails>
						<TCEforms>
							<label>Email-Adressen für Bestellbestätigungen (durch Kommata trennen)</label>
							<config>
								<type>text</type>
								<cols>30</cols>
								<rows>5</rows>
							</config>
						</TCEforms>
					</settings.emails>
					<settings.confirmtext>
						<TCEforms type="array">
							<config type="array">
								<type>text</type>
								<cols>48</cols>
								<rows>5</rows>
							</config>
							<label>Text für Auftragsbestätigung</label>
							<defaultExtras>richtext[*]:rte_transform[flag=rte_enabled|mode=ts_css]</defaultExtras>
						</TCEforms>
					</settings.confirmtext>
					
					<settings.rootid>
						<TCEforms>
							<label>Startseite</label>
								<config>
									<type>group</type>
									<internal_type>db</internal_type>
									<allowed>pages</allowed>
									<size>1</size>
									<maxitems>1</maxitems>
									<minitems>0</minitems>
									<show_thumbs>1</show_thumbs>
								</config>
						</TCEforms>
					</settings.rootid>
				</el>
			</ROOT>
		</sDEF>
	</sheets>
</T3DataStructure>